@page "/fileUpload"
@inject HttpClient Http

<h1 style="text-align: center; font-family:Impact;">Is Victor Wembanyama ready for the new season ?!</h1>
<img src="images/wembi.png" alt="player" style="max-width: 100%; height:70%;">
    <br>


<!--Checking if the file is empty or not-->
@if (string.IsNullOrEmpty(fileContent))
{
    <div>Loading...</div>
}

else
{
    <div>@fileContent</div>
}

@code {
    // store the content of the file
    private string? fileContent;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var absoluteUrl = "https://localhost:7168/sample.txt";
            fileContent = await Http.GetStringAsync(absoluteUrl);

        }
        catch (Exception e)
        {
            Console.WriteLine("Error reading from the file");
        }
    }
}
